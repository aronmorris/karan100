import java.util.Scanner;


public class DecimalConverter {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int intInput;
		String strInput;
		
		System.out.printf("Please enter a decimal or binary value.%n");
		do {
			try {
				strInput = sc.next();
				Integer.parseInt(strInput);
			} catch (Exception e) {
				System.out.printf("Couldn't parse.%n");
			}
		} while(true);
		
	}
	
	public static String toBinary(int i) {
		return Integer.toBinaryString(i);
	}
	
	public static int toDecimal(String b) {
		return Integer.parseInt(b, 2); //parses binary string in base 2
	}
	
}
